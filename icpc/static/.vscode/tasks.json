{
    "version": "0.1.0",
    "command": "g++",
    "args": ["-g", "-std=c++11", "${file}", "-o", "debug/${fileBasenameNoExtension}.exe", "-O2", "-DXLor"],    // 编译命令参数
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "\\"],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
    }
}